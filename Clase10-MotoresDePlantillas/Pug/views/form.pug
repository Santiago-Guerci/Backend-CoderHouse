form(action="/productos" method="post")
    div(class="mb-3")
        label(for="title" class="form-label") Título
        input(type="text" class="form-control" id="title" placeholder="La Naranja Mecánica")
    div(class="mb-3")
        label(for="price" class="form-label") Precio
        input(type="number" class="form-control" id="price")
    div(class="mb-3")
        label(for="description" class="form-label") Descripción
        input(type="text" class="form-control" id="description" placeholder="Buena película")
    input(type="submit" class="btn btn-success" value="Cargar producto")
